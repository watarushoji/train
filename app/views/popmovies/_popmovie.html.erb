<div class="article-box">
	<h3>
		<span class = "clicks"><%=" #{popmovie.pv} clicks" %>...</span><%= "#{popmovie.title} " %>
	</h3>
	<div class="article-content">
		<div class="entry-data">		
			<div class="entry-image">

				<% if popmovie.crawl_image == nil then %>				
				<%= link_to image_tag("#{popmovie.image}", alt:"#{popmovie.title}"), article_path(popmovie.id) %>
	
				<% else %>
				
					<img src=<%="#{popmovie.crawl_image}"%> >

				<% end %>


			</div>
			<p class="description">
				<%= sanitize "#{popmovie.content}"%>
			</p>
		</div>
		<div class="readmore">
			<ul class="nav nav-pills nav-stacked">
				<li role="presentation" class="active"><a href=<%="#{article_path(popmovie.id)}" %>>動画を見る</a></li>
			
			</ul>

		</div>

		<div class="entry-meta">
			<ul class="category">
				<% popmovie.article_categories.each do |category| %>
				<% name = category.name %>
				<li><%= link_to name, category_path(name) %></li>
				<% end %>
			</ul>
			<p class="date">
				最終更新: <%= "#{popmovie.created_at.in_time_zone("Tokyo").to_formatted_s(:without_second)}"%>
			</p>
			<p class="domain">
				<%= link_to "#{popmovie.domain}", "#{popmovie.domain}" %>
			</p>
			<ul class = "social_buttons">
				<li>
					<a href= <%="http://b.hatena.ne.jp/entry/http://dive-in-boobs.com/articles/#{popmovie.id}" %> class="hatena-bookmark-button" data-hatena-bookmark-title=<%= "#{popmovie.title}" %> data-hatena-bookmark-layout="simple-balloon" title="このエントリーをはてなブックマークに追加"><img src="https://b.st-hatena.com/images/entry-button/button-only@2x.png" alt="このエントリーをはてなブックマークに追加" width="20" height="20" style="border: none;" /></a><script type="text/javascript" src="https://b.st-hatena.com/js/bookmark_button.js" charset="utf-8" async="async"></script>
				</li>
				<li>
					<a href="https://twitter.com/share" class="twitter-share-button" data-lang="ja" data-count="none" data-hashtags="dive_in_boobs">ツイート</a>
					<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
				</li>		
			</ul>
		</div>
	</div>
</div>




