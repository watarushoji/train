<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="./bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="./bootstrap/css/bootstrap-responsive.min.css">
  <link rel="alternate" type="application/rss+xml" title="RSS"
  href="<%= request.protocol + request.host_with_port + "articles/1/posts.rss" %>" />
  <%= favicon_link_tag  %>
  <!-- '/assets/images/favicon.ico' -->
  <meta name="google-site-verification" content="UPY9nTVKhz-rlEPqt1_1pyteNjbCuHM3XR000DqgLM8" />
  <%= analytics_init if Rails.env.production? %>

</head>
<body>
  <!-- ヘッダー -->
  <div class="paisea">

    <div class="hd"> 
      <div class="header">
        <%= render 'layouts/header_text' %>
        <%= render 'layouts/navbar' %>
      </div>
    </div>
    

    <!-- <div class="row"> -->
    <!-- 記事はここから -->
    <div class="content">
      <div class="maincol_index">
        <div class="maincol_index_header">
          <%= render 'layouts/ad_content' %>
          <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>">
            <%= value %>
          </div>
          <% end %>
        </div>
        <div class="maincol_index_content">
          <%= yield %>
        </div>

      </div>

      <div class="maincol_index_sidebar">
        <%= render 'layouts/sidebar_ads'%>
      </div>
    </div>

    <!-- </div> -->
    <%= render 'layouts/footer' %>
    
  </div>

</body>

</html>





