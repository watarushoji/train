<% provide(:title, "#{@article.title}") %>
<div class="article-sidebar-box-show">
<div class="article-box-show">

	<h3 class="title-container">
		<%= link_to "#{@article.title}", article_path(@article.id) %>
	</h3>
	<!-- 動画埋め込みタグ -->
	<div class="entry-movie">
		<%= @article.sumnail.html_safe %>
	</div>


	<!-- 動画埋め込みここまで -->
	<ul class="entry-data">
		<li class="ad-content-show">
			<%= render 'ad_content_show' %>
		</li>
		<li class="description-show">
			<h4>＜動画詳細＞</h4>
			<p><%= sanitize "#{@article.content}"%></p>
		</li>
		<li class="category">
			<a><%= link_to "#{@article.category}", '#' %></a>
			<% if @article.category2 %>
			<a><%= link_to "#{@article.category2}", '#' %></a>
			<% end %>
			<% if @article.category3 %>
			<a><%= link_to "#{@article.category3}", '#' %></a>
			<% end %>
			<% if @article.category4 %>
			<a><%= link_to "#{@article.category4}", '#' %></a>
			<% end %>
		</li>
		<li class="date">
			<%= "#{@article.created_at.getlocal}"%>
		</li>
	</ul>
	<ul class="entry-meta">
		<li class="domain">
			<span class="domain">
				<%= link_to "#{@article.domain}", "#{@article.domain}" %>
			</span>
		</li>
	</ul>
</div>

<div class="article-box-show-sidebar">
	<ul>
		<li>広告1</li>
		<li>関連動画1	</li>
		<li>関連動画2</li>
	</ul>
</div>
</div>
