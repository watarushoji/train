
<div class="article-box">

	<h3 class="title-container">
		<%= link_to "#{@article.title}", article_path(@article.id) %>
	</h3>
	<!-- 動画埋め込みタグ -->
	<div class="entry-movie">
		<%= sanitize "#{@article.sumnail}" %>
		<p><%= "#{@article.sumnail}"%></p>
	</div>
	<ul class="entry-data">
		<li class="description">
			<p><%= sanitize "#{@article.content}"%></p>
		</li>
		<li class="category">
			<a><%= link_to "#{@article.category}", '#' %></a>
		</li>
		<li class="date">
			<%= "#{@article.created_at.getlocal}"%>
		</li>
	</ul>
	<ul class="entry-meta">
		<li class="domain">
			<span class="domain">
				<%= link_to "#{@article.domain}", "#{@article.domain}" %>
			</span>
		</li>
	</ul>


</div>

