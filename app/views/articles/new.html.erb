
<h1>Create Article</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for @article do |f| %>
		<%= render 'shared/error_messages' %>

		<%= f.label :title %>
		<%= f.text_field :title %>

		<%= f.label :content %>
		<%= f.text_field :content %>

		<%= f.label :category %>
		<%= f.text_field :category %>

		<%= f.submit "Create an Article", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
