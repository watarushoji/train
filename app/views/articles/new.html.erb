
<h1>Create Article</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for @article do |f| %>
		<%= render 'shared/error_messages' %>

		<%= f.label :title %>
		<%= f.text_field :title %>

		<%= f.label :content %>
		<%= f.text_field :content, :size => "200x200" %>

		<%= f.label :category %>
		<%= f.text_field :category %>

		<%= f.label :domain %>
		<%= f.text_field :domain, :size => "200x15" %>

		<%= f.label :sumnail %>
		<%= f.text_field :sumnail, :size => "100x15" %>

		<%= f.submit "Create an Article", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
