
<h2>Create Categories</h2>

<div class="form-box">
	<%= form_for @category , :url => url_for(:controller => 'categories', :action => 'update') do |f| %>
	<%= render 'shared/error_messages_category' %>
	<div class="float-form-left">

		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :score %>
		<%= f.text_field :score %>

		<%= f.submit "Edit a Category", class: "btn btn-small" %>
	</div>
	<% end %>
</div>